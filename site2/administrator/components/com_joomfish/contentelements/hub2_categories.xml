<?xml version="1.0" ?>
<joomfish type="contentelement">
  <name>Hub2 Categories</name>
  <author>Anurag Gupta</author>
  <version>1.0.0</version>
  <description>Definition for HUB2 categories</description>
  <copyright>2010, HYPERLOCALIZER</copyright>
  <reference>
  	<table name="hub2_categories">
  		<field type="referenceid" name="id" translate="0">ID</field>
  		<field type="titletext" name="title" translate="1" >Title</field>
        <field type="text" name="alias" translate="1" posthandler="filterTitle">Alias</field>
        <field type="text" name="subtitle" translate="1" >Sub Title</field>
  		<field type="htmltext" name="body" translate="1" ebuttons="">Body</field>
        <field type="text" name="comment" translate="1">Comment</field>
        <field type="text" name="metadesc" translate="1">Metadesc</field>
        <field type="text" name="metakey" translate="1">Metakey</field>
  		<field type="checked_out_by" name="checked_out" translate="0">Check out by</field>
  		<field type="checked_out_date" name="checked_out_time" translate="0">Check out date</field>
  	</table>
  </reference>
</joomfish>