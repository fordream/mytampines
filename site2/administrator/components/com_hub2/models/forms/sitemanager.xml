<?xml version="1.0" encoding="utf-8"?>
<!-- sitemanager.xml $Id: $ -->
<form>
  <fields>
    <field name="name"
    	type="text"
    	id="name"
    	class="inputbox validate required custom-validate-length_0-500 @lbl"
      	label="ADMIN_SITE_XML_NAME"
      	size="52"
      	default=""
      	description="ADMIN_SITE_XML_DESC_Name"
      	required="true"
    />
    <field name="url" type="text" id="url" class="inputbox validate-url required @lbl"
      label="ADMIN_SITE_XML_URL"
      size="52"
      default=""
      description="ADMIN_SITE_XML_DESC_URL"
    />
        <field name="dbname" type="text" id="dbname" class="inputbox validate required custom-validate-length_0-255 @lbl"
            label="ADMIN_SITE_XML_DBNAME"
      size="52"
      default=""
      description="ADMIN_SITE_XML_DESC_DBNAME"
    />
        <field name="dbhost" type="text" id="dbhost" class="inputbox validate required custom-validate-length_0-255 @lbl"
            label="ADMIN_SITE_XML_DBHOST"
      size="52"
      default=""
      description="ADMIN_SITE_XML_DESC_DBHOST"
    />
        <field name="dbuser" type="text" id="dbuser" class="inputbox validate required custom-validate-length_0-255 @lbl"
            label="ADMIN_SITE_XML_DBUSER"
      size="52"
      default=""
      description="ADMIN_SITE_XML_DESC_DBUSER"
    />
    <field name="dbpassword" type="password" id="dbpassword" class="inputbox @lbl"
            label="ADMIN_SITE_XML_DBPASSWORD"
            size="52"
            default=""
            autocomplete="off"
            description="ADMIN_SITE_XML_DESC_DBPASSWORD"
    />
    <field name="dbprefix" type="text" id="dbprefix" class="inputbox validate required custom-validate-length_0-255 @lbl"
            label="ADMIN_SITE_XML_DBPREFIX"
            size="52"
            default="jos_"
            readonly="true"
            description="ADMIN_SITE_XML_DESC_DBPREFIX"
    />
  </fields>
  <fields group="newsite">
        <field name="adminemail" type="text" id="adminemail" class="inputbox validate-email required @lbl"
            label="ADMIN_SITE_XML_EMAIL"
            size="52"
            default=""
            description="ADMIN_SITE_XML_DESC_EMAIL"
        />
    </fields>
</form>