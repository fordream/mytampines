<?xml version="1.0" encoding="utf-8"?>
<!-- postcode.xml $Id: $ -->
<form>
	<fields>
		<field name="postcode"
			type="text"
			id="postcode"
			class="inputbox validate required custom-validate-length_0-32 @lbl"
			label="ADMIN_POSTCODE_XML_LABEL_POSTCODE"
			size="10"
			default=""
			description="ADMIN_POSTCODE_XML_DESC_POSTCODE"
			required="true"
		/>
		<field name="name"
			type="text"
			id="name"
			class="inputbox validate required custom-validate-length_0-255 @lbl"
			label="ADMIN_POSTCODE_XML_LABEL_NAME"
			size="20"
			default=""
			description="ADMIN_POSTCODE_XML_DESC_NAME"
			required="true"
		/>
        <field name="comments"
        	type="textarea"
        	id="comments"
        	class="inputbox @lbl"
            label="ADMIN_POSTCODE_XML_LABEL_COMMENT"
            rows="5" cols="50"
            default=""
            description="ADMIN_POSTCODE_XML_DESC_COMMENT"
        />
        <field name="metadesc"
        	type="text"
        	id="metadesc"
        	class="inputbox @lbl"
            label="ADMIN_POSTCODE_XML_LABEL_METADESC"
            size="20"
            default=""
            description="ADMIN_POSTCODE_XML_DESC_METADESC"
        />
        <field name="metakey"
        	type="text"
        	id="metakey"
        	class="inputbox @lbl"
            label="ADMIN_POSTCODE_XML_LABEL_METAKEY"
            size="20"
            default=""
            description="ADMIN_POSTCODE_XML_DESC_METAKEY"
        />
	</fields>
</form>